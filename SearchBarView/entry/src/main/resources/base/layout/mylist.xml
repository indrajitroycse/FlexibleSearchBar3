<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_view"
        ohos:height="$string:list_text_height"
        ohos:width="match_parent"
        ohos:text_alignment="left"
        ohos:margin="$string:list_text_margin"
        ohos:text_size="$string:list_text_size"
        ohos:text_font="$string:font_family"
        />

    <Component
        ohos:height="$string:line_component_height"
        ohos:width="match_parent"
        ohos:background_element="$string:component_color"/>

</DirectionalLayout>